<div class="page-header">
  <h3 align="center">Listing Articles</h3>
</div>

<table class="table" >
  <thead>
    <tr>
      <th><h3>Title</h3></th>
      <th><h3>Body</h3></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.body %></td>
        <td><%= link_to 'Show', article, class: "btn btn-info" %></td>
        <% if current_user.nil? or current_user.classnumber != "1859" %>
        <% else %>
          <td><%= link_to 'Edit', edit_article_path(article), class: "btn btn-primary" %></td>
          <td><%= button_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger " %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if current_user.nil? or current_user.classnumber != "1859" %>
<% else %>
<div align="center">
  <%= link_to 'New Article', new_article_path, class: "btn btn-primary" %>
</div>
<% end %>
