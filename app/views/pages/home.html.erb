<h1>home</h1>
<form class="form-horizontal">
  <fieldset>

    <!-- Prepended email input-->
    <div class="control-group">
      <div class="controls">
        <div class="input-prepend">
          <span class="add-on">Email</span>
          <%= text_field_tag :email, params[:email], id: "prependedtext", name: "email", class: "input-xlarge", placeholder: "example@email.com", type: "text" %>
        </div>
      </div>
    </div>
    <!-- Prepended password input-->
    <div class="control-group">
      <div class="controls">
        <div class="input-append">
          <%= password_field_tag :password %>
          <span class="add-on">Password</span>
        </div>
      </div>
    </div>
    <!-- Button -->
    <div class="control-group">
      <div class="controls">
        <%= submit_tag "Log In", name: "singlebutton", class: "btn btn-primary" %>
      </div>
    </div>
  </formset>
</form>
